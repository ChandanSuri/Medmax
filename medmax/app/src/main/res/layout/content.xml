<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:deepak="http://schemas.android.com/apk/res/android"
    deepak:layout_width="match_parent"
    deepak:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    deepak:background="@color/custom_theme_color"
    deepak:id="@+id/mainlay">

        <android.support.design.widget.AppBarLayout
            deepak:layout_width="match_parent"
            deepak:layout_height="wrap_content"
            deepak:id="@+id/app_bar"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                deepak:id="@+id/toolbar"
                deepak:layout_width="match_parent"
                deepak:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

    <!-- header ends here-->
    <!-- navigation starts here-->
    <android.support.v4.widget.DrawerLayout
        deepak:layout_width="match_parent"
        deepak:layout_height="fill_parent"
        deepak:id="@+id/drawf"
        deepak:layout_below="@id/app_bar">
        <FrameLayout
            deepak:layout_width="match_parent"
            deepak:layout_height="match_parent"
            deepak:id="@+id/frame">
        </FrameLayout>

        <ListView
            style="@style/CodeFont"
            deepak:layout_width="250dp"
            deepak:layout_height="match_parent"
            deepak:layout_gravity="start"
            deepak:id="@+id/nav_list"
            deepak:background="#fff"
            deepak:listSelector="#f2f8f9">
        </ListView>
    </android.support.v4.widget.DrawerLayout>
    <!-- navigation drawer ends here-->
</RelativeLayout>
